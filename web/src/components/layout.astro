---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    
    <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
</head>
<body>
    <slot />
</body>
</html>
