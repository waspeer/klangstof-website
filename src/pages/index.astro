---
import Layout from '~/components/_layout.astro';
import Contact from '~/components/contact.astro';
import Header from '~/components/header.astro';
import Newsletter from '~/components/newsletter.astro';
import RabbitImage from '~/components/rabbit-image.astro';
import Socials from '~/components/socials.astro';
---

<Layout>
  <section class="hero pile">
    <div class="header-wrapper wrapper">
      <Header />
    </div>

    <RabbitImage />
  </section>

  <div class="sections-wrapper wrapper">
    <!-- <section>
      <Store />
    </section> -->

    <!-- <section>
      <Instagram />
    </section> -->

    <div class="switcher">
      <section id="newsletter">
        <Newsletter />
      </section>

      <section id="contact">
        <Contact />
      </section>
    </div>

    <section class="socials">
      <Socials />
    </section>
  </div>
</Layout>

<style>
  .sections-wrapper {
    background-color: var(--gray-0);

    & section {
      padding: var(--font-size-xxl) 0;
    }
  }

  .hero {
    align-items: start;
    color: var(--gray-0);

    & .header-wrapper {
      order: 1;
    }

    & > :global(img) {
      width: 100%;
      height: 100vh;
      height: 100dvh;
      object-fit: cover;
      object-position: center;
    }
  }

  .socials {
    display: flex;
    justify-content: center;
  }
</style>
